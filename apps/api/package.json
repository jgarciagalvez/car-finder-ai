{
  "name": "@car-finder/api",
  "version": "1.0.0",
  "description": "Car Finder AI Backend API",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "echo 'ESLint configured - TypeScript linting via type-check'",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "ingest": "tsx src/scripts/ingest.ts",
    "translate": "tsx src/scripts/translate.ts",
    "analyze": "tsx src/scripts/analyze.ts",
    "full-pipeline": "tsx src/scripts/ingest.ts && tsx src/scripts/translate.ts && tsx src/scripts/analyze.ts"
  },
  "dependencies": {
    "@car-finder/types": "workspace:*",
    "@car-finder/db": "workspace:*",
    "@car-finder/services": "workspace:*",
    "@car-finder/ai": "workspace:*",
    "cheerio": "~1.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.0",
    "puppeteer": "~22.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.11.0",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^9.0.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.0.0"
  }
}
