{
  "name": "@car-finder/scripts",
  "version": "1.0.0",
  "description": "Data ingestion and processing scripts for Car Finder AI",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/ingest.ts",
    "ingest": "tsx src/ingest.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "@car-finder/types": "workspace:*",
    "@car-finder/db": "workspace:*",
    "@car-finder/services": "workspace:*",
    "tsx": "^4.7.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.5.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts",
      "!src/__tests__/**"
    ]
  }
}
